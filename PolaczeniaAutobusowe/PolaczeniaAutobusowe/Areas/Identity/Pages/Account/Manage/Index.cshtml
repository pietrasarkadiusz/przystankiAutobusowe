@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Nazwa użytkownika</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label>Imię</label>
                <input asp-for="Input.Imie" class="form-control" />
                <span asp-validation-for="Input.Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Nazwisko</label>
                <input asp-for="Input.Nazwisko" class="form-control" />
                <span asp-validation-for="Input.Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                @if (Model.IsEmailConfirmed)
                {
                    <div class="input-group">
                        <input asp-for="Input.Email" class="form-control" />
                        <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                    </div>
                }
                else
                {
                    <input asp-for="Input.Email" class="form-control" />
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link">Wyślij weryfikacje adresu email</button>
                }
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Adres</label>
                <input asp-for="Input.Adres" class="form-control" />
                <span asp-validation-for="Input.Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Kod pocztowy</label>
                <input asp-for="Input.KodPocztowy" class="form-control" />
                <span asp-validation-for="Input.KodPocztowy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Numer telefonu</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Zapisz</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}