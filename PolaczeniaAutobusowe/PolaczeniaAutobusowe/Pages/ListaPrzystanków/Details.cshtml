@page
@model PolaczeniaAutobusowe.Pages.ListaPrzystanków.DetailsModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Szczegóły przystanku</h2>
<br />
<div class="border backgroundWhite">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Przystanek.Nazwa"></label>
        </div>
        <div class="col-5">
            <input asp-for="Przystanek.Nazwa" disabled class="form-control" />
        </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <a asp-page="Edit" asp-route-id="@Model.Przystanek.Id" class="btn btn-info form-control">Edytuj</a>
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
</div>